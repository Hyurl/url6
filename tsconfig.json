{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "preserveConstEnums": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "newLine": "LF",
        "removeComments": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules/*"
    ]
}